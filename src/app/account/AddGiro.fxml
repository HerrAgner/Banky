<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<FlowPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.account.AddGiro">
    <children>
        <GridPane hgap="10.0" prefWidth="600.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            </rowConstraints>
            <children>
                <Label prefWidth="100.0" text="Add new PG or BG" />
                <TextField fx:id="textFieldGiro" promptText="Enter PG/BG number" GridPane.columnIndex="1">

                </TextField>
                <Button fx:id="fetchName" text="Fetch name" GridPane.columnIndex="2" />
                <Button fx:id="addGiroButton" mnemonicParsing="false" text="Add giro to account" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <Label fx:id="giroName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox fx:id="giroBox" prefWidth="150.0" promptText="Remove giro from account" GridPane.rowIndex="4" />
            <Button fx:id="removeGiro" mnemonicParsing="false" text="Remove" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </children>
            <padding>
                <Insets left="20.0" top="20.0" />
            </padding>
        </GridPane>
    </children>
</FlowPane>

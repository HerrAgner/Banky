<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefWidth="800.0" style="-fx-background-color: WHITE;" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.account.AccountController">
   <center>
      <ScrollPane BorderPane.alignment="CENTER">
         <content>
            <ListView fx:id="transactionBox" prefWidth="600.0" />
         </content></ScrollPane>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="loadTransactions" mnemonicParsing="false" onAction="#loadTransactions" text="Load 10" />
            <Button fx:id="loadAll" mnemonicParsing="false" onAction="#loadAllTransactions" text="Load all" />
         </children>
      </HBox>
   </top>
</BorderPane>
